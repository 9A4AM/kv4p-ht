<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memoryContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/memoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost"
        android:text="FM Calling Frequency"
        android:textColor="@color/primary_deselected"
        android:textSize="16dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/memoryFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost"
        android:text="146.5200"
        android:textColor="@color/primary_deselected"
        android:textSize="36dp"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/memoryMenu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="16dp"
        android:background="@drawable/ic_menu"
        android:layout_gravity="right"
        android:contentDescription="Memory menu"
        android:layout_marginTop="-56dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"/>

</androidx.appcompat.widget.LinearLayoutCompat>